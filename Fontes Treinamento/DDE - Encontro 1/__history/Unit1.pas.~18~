    Label24: TLabel;
    Shape11: TShape;
    Label25: TLabel;
    WebCharts1: TWebCharts;
    WebCharts2: TWebCharts;
    ClientDataSet2: TClientDataSet;
    ClientDataSet3: TClientDataSet;
